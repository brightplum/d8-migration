<?php
/**
 * @file
 * Contains core install, update and system HOOKs.
 */

/**
 * Implements HOOK_install()
 */
function cdreams_profile_install() {
  include_once __DIR__ .'/cdreams_profile.module';

  $bundles = array(
    'author' => (object) array(
      'type' => 'author',
      'label' => 'Author profile',
      'title_display' => CDREAMS_PROFILE_TITLE_EMBED,
      'has_page' => TRUE,
      'view' => 'author_articles',
      'description' => 'Contributing author for article attributions.',
      'overrides' => array(),
    ),
    'source' => (object) array(
      'type' => 'source',
      'label' => 'Source profile',
      'title_display' => CDREAMS_PROFILE_TITLE_NORMAL,
      'has_page' => FALSE,
      'description' => 'Information about an article source.',
      'overrides' => array(),
    ),
    'organization' => (object) array(
      'type' => 'organization',
      'label' => 'Organization profile',
      'title_display' => CDREAMS_PROFILE_TITLE_NORMAL,
      'has_page' => TRUE,
      'description' => 'Information about an organization.',
      'overrides' => array('field_contact_info' => 'field_contact_info'),
    ),
  );

  // Install the default profile bundles
  foreach ($bundles as $bundle) {
    drupal_write_record('cdreams_profile_types', $bundle);
  }
  
  // Install entity fields for profiles.
  iwapi_include('entity');
  _iwapi_install_entity_templates_dir(__DIR__ .'/entity_templates');
}

